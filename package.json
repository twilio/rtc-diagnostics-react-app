{
  "name": "rtc-diagnostics-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.10.0",
    "@material-ui/icons": "^4.9.1",
    "@twilio-labs/serverless-api": "^2.0.1",
    "@twilio/rtc-diagnostics": "^1.0.0-preview3",
    "@types/node": "^12.12.39",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "cli-ux": "^5.4.6",
    "dotenv": "^8.2.0",
    "loglevel": "^1.6.8",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "twilio": "^3.43.1",
    "twilio-client": "^1.13.0-beta1",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{ts,tsx}",
    "test:serverless": "jest -c jest.serverless.config.js",
    "test:ci": "npm run test:ci:app && npm run test:ci:serverless",
    "test:ci:app": "jest --ci --runInBand --reporters=default --reporters=jest-junit --coverage",
    "test:ci:serverless": "jest -c jest.serverless.config.js --ci --runInBand",
    "serverless:deploy": "npm run build && node serverless/scripts/deploy.js",
    "serverless:remove": "node serverless/scripts/remove.js",
    "serverless:list": "node serverless/scripts/list.js"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-shadow": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "^3.3.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^24.9.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash.set": "^4.3.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "http-proxy-middleware": "^1.0.4",
    "husky": "^4.2.5",
    "jest-junit": "^10.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.2.2",
    "lodash.set": "^4.3.2",
    "mocha": "^7.1.2",
    "mocha-junit-reporter": "^1.23.3",
    "prettier": "^2.0.5",
    "stdout-stderr": "^0.1.13",
    "superagent": "^5.2.2",
    "ts-jest": "^24.3.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
